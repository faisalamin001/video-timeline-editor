{
  "compilerOptions": {
    "composite": true,
    "incremental": true,

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmitOnError": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "resolveJsonModule": true,
    "strict": true,

    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",

    "jsx": "react",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
